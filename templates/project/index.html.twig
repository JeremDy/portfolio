{% extends 'base.html.twig' %}

{% block title %}{{project.name}}{% endblock %}

{% block body %}


<section class="title">
    <h1>{{project.name}}</h1>
</section>

<div class="row">
    <div id="carouselExampleControls" class="carousel slide col-10 offset-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3 col-xl-4 offset-xl-1" data-ride="carousel" data-interval="false">
    <div class="carousel-inner">
        {% for image in project.projectImages %}
            <div class="carousel-item {% if loop.first %}active {% endif %}">
            <img class="d-block w-100" src="{{asset('images/products')}}/{{image.image}}" alt="First slide">
            </div>
        {% endfor %}
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
    </div>

    <section class="description col-10 offset-1 col-xl-5">

    <h2>Description :</h2>
    {{ project.description|raw }}
    <div class="project-skills">
        <ul class="col-12 col-lg-8 col-md-10 offset-md-1 offset-lg-2 skill-list">
        {% for skill in project.skills %}
            <li class="skill-list-item">{{ skill.name }}</li>
        {% endfor %}
  
    <ul>
    </div>
    </section>

</div>

{% endblock %}
